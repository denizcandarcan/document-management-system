@model List<DepartmentListDto>
@{
    Layout = "_Layout";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">List of Registered /</span> Departments</h4>
    <div class="card">

        <div class="table-responsive text-nowrap">
            <div id="toastContainer"></div>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Department ID</th>
                        <th>Department Name</th>
                        <th>Edit</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var deparment in Model)
                    {
                        <tr>
                            <td><strong>@deparment.Id</strong></td>
                            <td>@deparment.Definition</td>
                            <td><a class="btn btn-info" asp-action="Update" asp-route-id="@deparment.Id">Edit</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
    <a class="btn btn-primary mt-3" asp-action="Create" asp-controller="Department">Create New Department</a>
    <!--/ Hoverable Table rows -->
</div>
<hr class="my-5" />